{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Keep-alive: update existing `sudo` time stamp until the script finished
while true; do
	sudo -n true
	sleep 60
	kill -0 "$$" || exit
done 2>/dev/null &

echo "üç∫ Install macOS homebrew packages"

set -eufo pipefail

{{ $taps := list
  "dart-lang/dart"
  "homebrew/cask"
  "homebrew/core"
  "homebrew/services"
  "sass/sass"
-}}

{{ $brews := list
  "act"
  "chezmoi"
  "curl"
  "dart"
  "fastlane"
  "fd"
  "ffmpeg"
  "gh"
  "git-crypt"
  "git-extras"
  "git-lfs"
  "git"
  "glances"
  "htop"
  "ifstat"
  "jq"
  "mailhog"
  "mkcert"
  "rbenv"
  "ruby-build"
  "sass"
  "yt-dlp"
  "z"
  "zsh"
-}}

{{ $casks := list
  "1password-cli"
  "1password"
  "adguard"
  "chromedriver"
  "google-chrome"
  "iterm2"
  "ngrok"
  "orbstack"
  "raycast"
  "rectangle"
  "visual-studio-code"
  "vlc"
-}}

{{ output "/opt/homebrew/bin/brew" "shellenv" | trim }}

brew bundle --no-lock --file=/dev/stdin <<EOF || :
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end }}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end }}
EOF

{{ end -}}
